<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OmniCore.Client.Views.Wizards.NewUser.UserWizardRootView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="True"/>
                <Label Text="Create and manage a user profile on this device"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Switch IsToggled="False"/>
                <Label Text="Manage or monitor a user profile on another device"/>
            </StackLayout>
            <Button Text="Continue" Command="{Binding ContinueCommand}"/>
            <Button Text="Exit" Command="{Binding CancelCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>